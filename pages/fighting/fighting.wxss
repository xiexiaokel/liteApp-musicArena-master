/* pages/fighting/fighting.wxss */
.container{
  background:#071448;
}
.game-area{
  width:750rpx;
  height:599rpx;
  position: relative;
  z-index: 1;
  overflow:hidden;
}
.game-bg{
  position: absolute;
  left:0;
  top:0;
  width:750rpx;
  height:599rpx;
  z-index: 2;
}
.game-content{
  position: absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  z-index: 3;
  overflow:hidden;
   background:url('https://duokeyun.oss-cn-qingdao.aliyuncs.com/wechat/wxapp/musicArena/images/fight_bg.png');
  background-position: left 400rpx;
  background-size: 100% auto;
  background-repeat: no-repeat; 
}
.game-before{
  padding-top:100rpx;
}
.game-status{
  width:100%;
}
.start-game{
  width:100%;
  height:100%;
  padding-top:300rpx;
}
.fight-btn{
  width:580rpx;
  margin:40rpx auto;
}
.underline{
  text-decoration: underline;
}
.game-count-down{
  height:400rpx;
}

/* 弹窗 */
.blue-btn{
  width:530rpx;
  height:120rpx;
  background:#409cff;
  padding:0 35rpx;
  margin-bottom:30rpx;
}

/* 游戏问题区 */
.game-list{}
.game-title{

}
.answer-list{
  padding-top:50rpx;
  width:580rpx;
}
.answer-item{
  height:90rpx;
  margin-bottom:40rpx;
}
.answer-item text{
  display: block;
  height:90rpx;
  border-radius: 10rpx;
  background:#fff;
  color:#1f1f1f;
  font-size:36rpx;
  line-height: 90rpx;
  text-align: center;
}
.answer-item .answer-correct{
  background:#20bb7b;
  color:#fff;
}
.answer-item .answer-wrong{
  background:#e84a68;
  color:#fff;
}

/* 挑战成功 */
.success{
  padding-top:30rpx;
  width:580rpx;
  margin:0 auto;
}
.success .ft32{
  line-height: 50rpx;
}
.full-button{
  width:100%;
  margin:35rpx 0;
}
.half-button{
  width:270rpx;
}