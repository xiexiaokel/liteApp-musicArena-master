/* components/popModal/popModal.wxss */

@import '../../app.wxss';

.pop-modal{
  border-radius: 10rpx;
  position: fixed;
  left:0;
  top:0;
  right:0;
  bottom:0;
  z-index: 999;
}
.modal-mask{
  position: absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  z-index: 1000;
  background:rgba(0,0,0,0.5);
}
.modal-content{
  width:618rpx;
  background:#fff;
  position: absolute;
  z-index: 1001;
  border-radius: 10rpx;
  left:50%;
  top:50%;
  margin:-440rpx 0rpx 0rpx -309rpx;
}
.modal-title{
  height:110rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  position: relative;
}
.modal-close{
  position: absolute;
  right:15rpx;
  top:5rpx;
  font-size:70rpx;
  text-align: center;
  color:#fff;
}